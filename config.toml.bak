baseURL = "http://ryanprairie.com"
# [en, zh-cn, fr, ...] determines default content language
defaultContentLanguage = "en-us"
# language code
languageCode = "en-us"
# Change the default theme to be use when building the site with Hugo
theme = "FixIt"
[params]
  # LoveIt theme version
  version = "0.2.X"
  defaultTheme = "dark"
  # home page
  [params.home]
    [params.home.profile]
      enable = true
      title = "About Me"
      avatarUrl = "/extras/headshot.jpg"

  [params.page]
  ## font awesome quick icon support
  ## remove `<`,`>`
  ## :(<icon name>):
  ## https://fixit.lruihao.cn/theme-documentation-content/#fontawesome
    fontawesome = true
    [params.page.toc]
      enable = true
      position = "right"
    [params.page.code]
      copy = true

      edit = false

[menu]
  [[menu.main]]
    identifier = "about"
    # you can add extra information before the name (HTML format is supported), such as icons
    pre = ""
    # you can add extra information after the name (HTML format is supported), such as icons
    post = ""
    name = "About"
    url = "/about/"
    # title will be shown when you hover on this menu link
    title = ""
    weight = 1
  [[menu.main]]
    identifier = "posts"
    # you can add extra information before the name (HTML format is supported), such as icons
    pre = ""
    # you can add extra information after the name (HTML format is supported), such as icons
    post = ""
    name = "Posts"
    url = "/posts/"
    # title will be shown when you hover on this menu link
    title = ""
    weight = 2
  [[menu.main]]
    identifier = "categories"
    pre = ""
    post = ""
    name = "Categories"
    url = "/categories/"
    title = ""
    weight = 3

# Markup related configuration in Hugo
[markup]

  # Syntax Highlighting
  [markup.highlight]
    codeFences = true
    guessSyntax = false
    lineNos = true
    lineNumbersInTable = true
    # false is a necessary configuration
    # (https://github.com/dillonzq/LoveIt/issues/158)
    noClasses = false
  [markup.goldmark]
    [markup.goldmark.extensions]
      definitionList = true
      footnote = true
      linkify = true
      strikethrough = true
      table = true
      taskList = true
      typographer = true
    [markup.goldmark.renderer]
      # whether to use HTML tags directly in the document
      unsafe = true
  [markup.toc]
    startLevel = 2
    endLevel = 6
  [markup.tableOfContents]
    startLevel = 2
    endLevel = 6
